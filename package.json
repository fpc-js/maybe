{
  "name": "@fpc/maybe",
  "description": "Maybe type for modern javascript",
  "version": "1.0.0",
  "author": "Emiliano Bovetti <emiliano.bovetti@gmail.com>",
  "license": "GPL-3.0",
  "keywords": [
    "functional",
    "collection",
    "maybe",
    "fpc",
    "fp"
  ],
  "type": "module",
  "main": "./src/index",
  "scripts": {
    "test": "jest",
    "lint": "eslint ."
  },
  "jest": {
    "transform": {
      "^.*\\.js$": "babel-jest-modules"
    },
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!@fpc)"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "@babel/plugin-transform-runtime"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fpc-js/maybe.git"
  },
  "bugs": {
    "url": "https://github.com/fpc-js/maybe/issues"
  },
  "release": {
    "branch": "master",
    "prepare": [
      "@semantic-release/npm",
      {
        "path": "@semantic-release/git",
        "assets": [
          "package.json",
          "src/*.js"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    "publish": [
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "dependencies": {
    "@fpc/types": "^0.0.9"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "@babel/runtime": "^7.9.2",
    "babel-jest-modules": "^0.0.2",
    "coveralls": "^3.0.11",
    "eslint": "^6.8.0",
    "jest": "^25.1.0"
  }
}
